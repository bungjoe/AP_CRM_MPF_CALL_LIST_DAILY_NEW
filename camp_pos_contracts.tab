  skp_client                   INTEGER not null,
  skp_employee_consultant      INTEGER,
  text_contract_number         VARCHAR2(80) not null,
  name_credit_status           VARCHAR2(255),
  dtime_proposal               DATE,
  sent_to_evaluate             DATE not null,
  date_decision                DATE not null,
  dtime_cancellation           DATE,
  dtime_signature_contract     DATE,
  dtime_activation             DATE,
  dtime_close                  DATE,
  dtime_payment_last           DATE,
  due_date                     DATE,
  flag_cancelled_automatically CHAR(1),
  flag_cancelled_pre_approval  CHAR(1),
  flag_deleted                 VARCHAR2(1) not null,
  name_producer                VARCHAR2(255),
