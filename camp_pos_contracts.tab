nologging;
create index CPC_IX01 on CAMP_POS_CONTRACTS (TRUNC(DTIME_PROPOSAL), SKP_CLIENT);
create index CPC_IX02 on CAMP_POS_CONTRACTS (SKP_CLIENT, SKP_CREDIT_CASE);
create index CPC_IX03 on CAMP_POS_CONTRACTS (SKP_CLIENT);

