  code_sales_agent             VARCHAR2(90),
  name_sales_agent             VARCHAR2(255),
  code_salesroom               VARCHAR2(60),
  name_salesroom               VARCHAR2(1020),
  num_gps_latitude             NUMBER,
  num_gps_longtitude           NUMBER,
  code_partner                 VARCHAR2(60),
  name_partner                 VARCHAR2(255),
  partner_category             VARCHAR2(1020 BYTE),
  name_sales_business_area     VARCHAR2(255),
  name_sales_district          VARCHAR2(255)
